# Environment Variables Template

# ===== Required for Deployment =====

# Demo mode (set to false for production)
DEMO_MODE=true

# LLM Provider
LLM_PROVIDER=mock

# ===== Optional: Azure/Foundry Integration =====

# Microsoft Foundry (Azure OpenAI)
# FOUNDRY_ENDPOINT=https://your-resource.openai.azure.com
# FOUNDRY_API_KEY=your-api-key-here
# FOUNDRY_DEPLOYMENT=gpt-4

# ===== Optional: Authentication =====

# Enable JWT authentication
ENABLE_AUTH=false

# Azure AD (Entra ID) settings
# AZURE_AD_TENANT_ID=your-tenant-id
# AZURE_AD_CLIENT_ID=your-client-id
# AZURE_AD_AUDIENCE=api://riskcanvas

# ===== Optional: Observability =====

# OpenTelemetry
OTEL_ENABLED=false
# OTEL_ENDPOINT=http://localhost:4318
# OTEL_SERVICE_NAME=riskcanvas-api

# Logging level
LOG_LEVEL=INFO

# ===== API Configuration =====

# API Version
API_VERSION=0.7.0

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:4173

# ===== Database (if needed in future) =====

# DATABASE_URL=postgresql://user:password@localhost:5432/riskcanvas

# RiskCanvas Environment Configuration
# Copy to .env and fill in real values before deploying.
# All variables are optional in DEMO_MODE=true (offline-only mode).

# ── Application ──────────────────────────────────────────────────────────────
DEMO_MODE=true
API_PORT=8090
WEB_PORT=4174

# ── LLM Providers ────────────────────────────────────────────────────────────
# Leave blank to use MockProvider (offline deterministic mode)
OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=

# ── Job Store ─────────────────────────────────────────────────────────────────
# Default: in-memory. Set to "sqlite" for persistent job history.
JOB_STORE_BACKEND=memory
JOB_STORE_SQLITE_PATH=./data/jobs.db

# ── Observability ─────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
SENTRY_DSN=

# ── GitLab Integration (v3.1 DevOps policy gate) ─────────────────────────────
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=
GITLAB_PROJECT_ID=

# ── Azure Deployment ──────────────────────────────────────────────────────────
AZURE_RESOURCE_GROUP=
AZURE_SUBSCRIPTION_ID=
AZURE_LOCATION=eastus
